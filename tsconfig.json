{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json", "tsconfig.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2020",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strictNullChecks": true,
    //Only for development
    "allowUnusedLabels": true,
    "allowJs": true,
    "esModuleInterop": true,
    "composite": true,
    "outDir": "dist"
  }
}
